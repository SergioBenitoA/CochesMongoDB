<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="565.0" prefWidth="617.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cochesmongodb.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <AnchorPane prefHeight="507.0" prefWidth="578.0">
            <children>
                <Label layoutX="59.0" layoutY="30.0" text="Matricula" />
                <Label layoutX="59.0" layoutY="116.0" text="Modelo" />
                <Label layoutX="59.0" layoutY="72.0" text="Marca" />
                <Label layoutX="59.0" layoutY="165.0" text="Tipo" />
                <TextField fx:id="txtMatricula" layoutX="140.0" layoutY="26.0" />
                <TextField fx:id="txtModelo" layoutX="140.0" layoutY="112.0" />
                <TextField fx:id="txtMarca" layoutX="140.0" layoutY="68.0" />
                <ComboBox fx:id="cbTipo" layoutX="140.0" layoutY="161.0" prefWidth="150.0" />
                <Button fx:id="btnNuevo" layoutX="61.0" layoutY="224.0" mnemonicParsing="false" onAction="#cocheNuevo" text="Nuevo" />
                <Button fx:id="btnModificar" layoutX="383.0" layoutY="224.0" mnemonicParsing="false" onAction="#cocheModificar" text="Modificar" />
                <Button fx:id="btnEliminar" layoutX="484.0" layoutY="224.0" mnemonicParsing="false" onAction="#cocheEliminar" text="Eliminar" />
                <Button fx:id="btnCancelar" layoutX="273.0" layoutY="224.0" mnemonicParsing="false" onAction="#cocheCancelar" text="Cancelar" />
                <Button fx:id="btnGuardar" layoutX="163.0" layoutY="224.0" mnemonicParsing="false" onAction="#cocheGuardar" text="Guardar" />
                <TableView fx:id="tblCoches" layoutX="38.0" layoutY="277.0" prefHeight="200.0" prefWidth="511.0">
                    <columns>
                        <TableColumn fx:id="colMatricula" prefWidth="75.0" text="Matricula" />
                        <TableColumn fx:id="colMarca" prefWidth="75.0" text="Marca" />
                  <TableColumn fx:id="colModelo" prefWidth="75.0" text="Modelo" />
                  <TableColumn fx:id="colTipo" prefWidth="75.0" text="Tipo" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</VBox>
